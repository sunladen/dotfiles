rm -rf ~/.bash_aliases && ln -s $PWD/bash/.bash_aliases ~/.bash_aliases 
rm -rf ~/.bashrc && ln -s $PWD/bash/.bashrc ~/.bashrc
rm -rf ~/.inputrc && ln -s $PWD/bash/.inputrc ~/.inputrc
rm -rf ~/.profile && ln -s $PWD/bash/.profile ~/.profile
rm -rf ~/.vim && ln -s $PWD/.vim ~/.vim
mkdir -p ~/.config/nvim && ln -s $PWD/.config/nvim/init.vim ~/.config/nvim/init.vim
rm -rf ~/pureline && cd ~ && git clone https://github.com/chris-marsh/pureline.git
